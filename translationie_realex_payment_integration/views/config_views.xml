		<record model="ir.ui.view" id="view_realex_form">
			<field name="name">custom_payments.realex.config</field>
			<field name="model">custom_payments.realex.config</field>
			<field name="arch" type="xml">
				<form string="Realex Configuration">
					<header>
						<button string="Save" type="object" name="execute" class="oe_highlight"/>
						<button string="Cancel" type="object" name="cancel" class="oe_link" />
					</header>
					<sheet>
						<group string="HPP Settings">
							<field name="url"/>
							<field name="merchant_id" />
							<field name="response_url"/>
							<field name="hpp_version" />
							<group string="Non 3D Secure Account Details" >
								<field name="account" />
								<field name="secret"/>
							</group>
							<group string="3D Secure Account Details">
								<field name="account_3d_secure" />
								<field name="secret_3d_secure" />
							</group>
						</group>
						<group string="Receipt Settings">
							<field name="company_name" />
							<field name="company_address" />
							<field name="company_city" />
							<field name="company_country" />
						</group>
						<group string="Notification Settings">
							<field name="sender_account" />
							<field name="receiver_account" />
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_realex_form">
			<field name="name">Realex Configuration</field>
			<field name="res_model">custom_payments.realex.config</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">inline</field>
		</record>
		
