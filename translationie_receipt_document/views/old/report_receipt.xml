<?xml version="1.0" encoding="utf-8" ?>
<openerp>
<data>
<template id="report_receipt_document">
		<t t-call="report.external_layout">
			<div class="page">
				<div class="row">
					<div class="col-xs-4">
						<address style="font-size:20pt;" t-field="docs.partner_id"
							t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}' />
						<span t-if="docs.partner_id.vat">TIN: <span t-field="docs.partner_id.vat"/></span>
					</div>
				</div>
				<h2>
					<span>Receipt</span>
					<span t-field="docs.name" />
				</h2>
				<t t-if="o.invoice_ids.invoice_line_ids.sale_line_ids.order_id">
					<div>
						<span>Order ID: </span>
						<span t-field="o.invoice_ids.invoice_line_ids.sale_line_ids.order_id" />
					</div>
				</t>
				<div>
					<p>SALE TRANSACTION</p>
					<p t-field="docs.amount"/>
					<p t-field="docs.payment_date" />
				</div>
			</div>
		</t>
</template>
</data>
</openerp>