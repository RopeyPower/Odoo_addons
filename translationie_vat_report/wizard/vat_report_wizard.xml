<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="wizard_vat_report" model="ir.ui.view" >
		<field name="name">wizard_vat_report</field>
		<field name="model">wizard.vat.report</field>
		<field name="arch" type="xml">
			<form string="Report VAT">
				<group>
					<field name="company_id" />
					<field name="from_date" />
					<field name="to_date" />
				</group>
				<footer>
					<button string="Report VAT" name="report_vat" type="object" class="oe_highlight" />
					<button string="Cancel" class="oe_link" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>
	
	<record id="action_report_vat" model="ir.actions.act_window">
		<field name="name">VAT Report</field>
		<field name="res_model">wizard.vat.report</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="wizard_vat_report" />
		<field name="target">new</field>
	</record>
	
	<menuitem
		action="action_report_vat"
		id="menu_action_report_vat"
		parent="account.menu_finance_reports"
		groups="account.group_account_user,account.group_account_manager" />
</odoo>